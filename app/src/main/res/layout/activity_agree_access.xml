<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:id="@+id/ll_parent"
    tools:context=".scanback.activity.ScanBackMainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_qt">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_33"
                android:padding="10dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/tv_place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_68"
                android:text="哈尔滨大剧院"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_28" />


        </RelativeLayout>

    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:paddingBottom="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:elevation="10dp"
        android:translationZ="10dp"
        android:transformPivotX="0dp"
        android:transformPivotY="10dp"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/shape_circle_coner_white_15"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/news"
            android:id="@+id/iv_new"
            android:layout_marginTop="@dimen/dp_16"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:id="@+id/tv_title"
            android:layout_below="@+id/iv_new"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/color_333333"
            android:text="王小明申请约见您"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_below="@+id/tv_title"
            android:textSize="@dimen/sp_14"
            android:id="@+id/tv_time"
            android:text="申请时间：2020.06.03 21:00"
            android:textColor="@color/color_666666"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/tv_time"
            android:textSize="@dimen/sp_14"
            android:id="@+id/tv_reason"
            android:text="申请事由：送快递"
            android:textColor="@color/color_666666"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/tv_reason"
            android:textSize="@dimen/sp_14"
            android:id="@+id/tv_phone_title"
            android:text="联系电话"
            android:textColor="@color/color_666666"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/tv_reason"
            android:textSize="@dimen/sp_14"
            android:id="@+id/tv_phone"
            android:layout_toRightOf="@+id/tv_phone_title"
            android:text="18888888888"
            android:textColor="@color/color_008dff"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:elevation="10dp"
        android:translationZ="10dp"
        android:transformPivotX="0dp"
        android:padding="@dimen/dp_15"
        android:transformPivotY="10dp"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/shape_circle_coner_white_15"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerVertical="true"
            android:textSize="@dimen/sp_14"
            android:id="@+id/tv_remark_title"
            android:text="备注(选填)"
            android:textColor="@color/color_666666"/>
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/tv_remark_title"
    android:background="@null"
    android:id="@+id/et_reason"
    android:textSize="@dimen/sp_14"
    android:textColor="@color/color_666666"/>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_26"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/shape_circle_conner_red_dark"
            android:text="拒绝"
            android:id="@+id/btn_unagree"
            android:textSize="@dimen/sp_18"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_agree"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/shape_circle_conner_green_dark"
            android:text="同意"
            android:textSize="@dimen/sp_18"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/white"/>
        
        
    </LinearLayout>

</LinearLayout>