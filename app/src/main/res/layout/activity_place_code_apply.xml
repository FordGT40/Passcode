<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/head_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/place_type"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />

                <!--            <ImageView-->
                <!--                android:id="@+id/iv_1"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_alignParentRight="true"-->
                <!--                android:layout_centerVertical="true"-->
                <!--                android:src="@drawable/enter" />-->

                <TextView
                    android:id="@+id/tv_place_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="企业"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/ysf_grey_e9e9e9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/palce_name"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/tv_dep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/iv_2"
                    android:layout_toRightOf="@+id/tv_0"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="@string/hint18"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/ysf_grey_999999"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/ysf_grey_e9e9e9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/place_code"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tv_place_paper_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/tv_1"
                    android:background="@null"

                    android:gravity="right"
                    android:hint="@string/hint19"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/ysf_grey_999999"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/ysf_grey_e9e9e9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/place_city"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_card_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/iv_more"
                    android:layout_toRightOf="@+id/tv_2"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="@string/hint20"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/enter" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/ysf_grey_e9e9e9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_addr"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@+id/tv_12"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="@string/hint31"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/ysf_grey_999999"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ysf_grey_e9e9e9"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_5"
                android:text="@string/hint21"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_13" />

            <RelativeLayout
                android:id="@+id/rl_person_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/legal_person_name"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/et_person_id_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/iv_2"
                    android:layout_toRightOf="@+id/tv_22"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="@string/hint22"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/ysf_grey_999999"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/ysf_grey_e9e9e9" />

            <RelativeLayout
                android:id="@+id/rl_person_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/legal_person_name_id_card"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/et_person_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/iv_2"
                    android:layout_toRightOf="@+id/tv33"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="@string/hint23"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/ysf_grey_999999"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/ysf_grey_e9e9e9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_licence_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/papers_type"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_licence_type">

                    <RadioButton
                        android:id="@+id/radio_type_a"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_licence_type"
                        android:layout_marginTop="@dimen/dp_15"
                        android:button="@drawable/radio_palce_apply"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_12"
                        android:text="@string/licence_type_a"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/hint_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/radio_type_a"
                        android:layout_marginLeft="@dimen/dp_35"
                        android:layout_marginTop="@dimen/dp_11"
                        android:text="@string/licence_type_a_hint"
                        android:textColor="@color/color_696969" />

                    <RadioButton
                        android:id="@+id/radio_type_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hint_1"
                        android:layout_marginTop="@dimen/dp_15"
                        android:button="@drawable/radio_palce_apply"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_12"
                        android:text="@string/licence_type_b"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/hint_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/radio_type_b"
                        android:layout_marginLeft="@dimen/dp_35"
                        android:layout_marginTop="@dimen/dp_11"
                        android:text="@string/licence_type_b_hint"
                        android:textColor="@color/color_696969" />

                    <RadioButton
                        android:id="@+id/radio_type_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hint_1"
                        android:layout_marginTop="@dimen/dp_15"
                        android:button="@drawable/radio_palce_apply"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_12"
                        android:text="@string/licence_type_c"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/hint_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/radio_type_b"
                        android:layout_marginLeft="@dimen/dp_35"
                        android:layout_marginTop="@dimen/dp_11"
                        android:text="@string/licence_type_c_hint"
                        android:textColor="@color/color_696969" />

                    <RadioButton
                        android:id="@+id/radio_type_d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hint_1"
                        android:layout_marginTop="@dimen/dp_15"
                        android:button="@drawable/radio_palce_apply"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_12"
                        android:text="@string/licence_type_d"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/hint_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_35"
                        android:layout_marginTop="@dimen/dp_11"
                        android:text="@string/licence_type_d_hint"
                        android:textColor="@color/color_696969" />
                </RadioGroup>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/ysf_grey_e9e9e9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_licence"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_upload"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/upload_licence_hint"
                    android:textColor="@color/color_696969" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/paper_a" />

            <ImageView
                android:id="@+id/iv_paper"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_138"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_7"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_upload"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_14"
                android:background="@drawable/shape_upload_btn"
                android:gravity="center"
                android:text="@string/upload_pic"
                android:textColor="@color/color_5D97C6"
                android:textSize="@dimen/sp_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@color/ysf_grey_e9e9e9" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_marginBottom="@dimen/dp_30"
                android:background="@drawable/shape_circle_conner_blue_deep"
                android:gravity="center"
                android:text="@string/next_step"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>