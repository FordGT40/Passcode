<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage.fragment.CarCardFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center">

        <com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_15" />

        <RelativeLayout
            android:id="@+id/rl_no_more_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_hint"
                android:background="@color/color_333333" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_hint"
                android:background="@color/color_333333" />

            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/dp_5"
                android:text="@string/no_more_data"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/image_empty"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/no_data"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/sp_18"
            android:visibility="gone" />

    </FrameLayout>

</FrameLayout>