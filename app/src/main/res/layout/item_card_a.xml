<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    android:id="@+id/ll_parent"
    android:layout_width="@dimen/dp_319"
    android:layout_height="@dimen/dp_110"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/dp_15"
    android:background="@drawable/kz_a">
    <ImageView
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_18"
        android:id="@+id/iv_logo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#00447B"
        android:id="@+id/tv_dep"
        android:layout_marginRight="@dimen/dp_55"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginTop="@dimen/dp_18"
       android:layout_toRightOf="@+id/iv_logo"
        android:layout_marginLeft="@dimen/dp_18"
        android:textStyle="bold"
        android:text="省政府"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dep"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_55"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="【黑A7GC07】车辆出入证"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_date_useful"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/shape_date_blue"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:text="长期(一年)"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_out_off_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_toRightOf="@+id/tv_date_useful"
        android:background="@drawable/shape_date_red"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:text="即将过期"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
    <TextView
        android:id="@+id/tv_out_off_date_already"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/shape_date_grey"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:text="已过期"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/kz_a_code"
    android:layout_alignParentRight="true"
    android:layout_marginTop="@dimen/dp_18"
    android:layout_marginRight="@dimen/dp_22"/>


</RelativeLayout>
</LinearLayout>