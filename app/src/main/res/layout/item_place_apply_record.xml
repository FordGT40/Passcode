<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_18"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            tools:text="测试数据" />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_card"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="#F41717"
            android:textSize="@dimen/dp_13"
            tools:text="提示：您不是北校区" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_hint"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_15"
            android:textColor="@color/ysf_grey_999999"
            android:textSize="@dimen/dp_13"
            tools:text="1232323231212" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_05"
            android:layout_below="@+id/tv_date"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@color/ysf_grey_e9e9e9" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="@dimen/dp_80"
            android:background="@drawable/shape_circle_corner_red"
            android:gravity="center"
            android:text="未通过"
            android:textColor="#F41717"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="@dimen/dp_32"/>



    </RelativeLayout>


</LinearLayout>