<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_215"
        android:background="@drawable/index_banner">

        <LinearLayout
            android:id="@+id/ll_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_18"
            android:background="@drawable/shape_circle_white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/scan"
                android:drawablePadding="@dimen/dp_6"
                android:text="扫码"
                android:paddingTop="@dimen/dp_5"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_show_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_marginBottom="@dimen/dp_18"
            android:background="@drawable/shape_circle_white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/qrcode"
                android:drawablePadding="@dimen/dp_6"
                android:text="亮码"
                android:paddingTop="@dimen/dp_5"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_show_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_38"
            android:layout_marginBottom="@dimen/dp_18"
            android:background="@drawable/shape_circle_white"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/id"
                android:drawablePadding="@dimen/dp_6"
                android:text="亮证"
                android:paddingTop="@dimen/dp_5"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:id="@+id/bg_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>