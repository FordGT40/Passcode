<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    android:id="@+id/ll_parent"
    android:layout_width="@dimen/dp_319"
    android:layout_height="@dimen/dp_110"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/dp_15"
    android:background="@drawable/kz_c">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#1E017B"
        android:id="@+id/tv_dep"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_18"
        android:textStyle="bold"
        android:text="【省政府】"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/tv_dep"
    android:textSize="18sp"
    android:id="@+id/tv_card_name"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_18"
    android:textColor="#1E017B"
    android:text="场所码"/>

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/kz_c_code"
    android:layout_alignParentRight="true"
    android:layout_marginTop="@dimen/dp_18"
    android:layout_marginRight="@dimen/dp_22"/>

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_card_name"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_13"
        android:text="No.23021525632562"
        android:textColor="#7E64D1"
        android:textSize="@dimen/sp_14" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:id="@+id/tv_date"
        android:textColor="#B8AAE4"
        android:text="有效期至：2020-06-01 (即将过期)"/>



</RelativeLayout>
</LinearLayout>