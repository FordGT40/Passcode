<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_parent"
        android:layout_width="@dimen/dp_319"
        android:layout_height="@dimen/dp_110"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/kz_c">

        <TextView
            android:id="@+id/tv_dep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_55"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="省政省政府省政府省政府省政府省政府府"
            android:textColor="#1E017B"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_qr_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_22"
            android:src="@drawable/kz_c_code" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_dep"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_55"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="【张某】工作证"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_job"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/dp_55"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_8"
            android:text="开发部-程序员"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>
</LinearLayout>