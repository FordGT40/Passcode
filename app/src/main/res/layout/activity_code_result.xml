<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_blue"
    android:orientation="vertical"
    tools:context=".scanback.activity.CodeResultActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:padding="@dimen/dp_10"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/comm_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_15"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_height="@dimen/dp_266"
        android:id="@+id/rl_top"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/shape_code_result_green">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_50"
            android:text="正常通行"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_40"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_date"
            android:layout_below="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_14"
            android:text="5月16日"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_25"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_57"
            android:orientation="vertical"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/sp_30"
            android:id="@+id/tv_num"
            android:text="1233 2125 1234"
            android:background="@drawable/shape_bg_card_reslut_green"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="@dimen/dp_165"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:background="@drawable/shape_bg_card_reslut_white">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_name"
    android:gravity="center|bottom"
    android:layout_marginTop="@dimen/dp_36"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_25"
        android:textColor="@color/textcolor"
        android:text="李*某"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_18"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dp_5"
        android:textColor="@color/textcolor"
        android:text="(1212)"
        />
</LinearLayout>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_18"
            android:id="@+id/tv_place"
            android:layout_below="@+id/ll_name"
            android:layout_marginTop="@dimen/dp_14"
            android:text="华泽数码科技有限责任公司"
            android:textColor="@color/textcolor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_18"
            android:id="@+id/tv_time"
            android:layout_below="@+id/tv_place"
            android:layout_marginTop="@dimen/dp_10"
            android:text="2020年5月30日 18:00(入内)"
            android:textColor="@color/color_666666"/>
    </RelativeLayout>



</LinearLayout>