<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mine.activity.LoginActivity">

    <include layout="@layout/head_title_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_53"
                android:text="新手机号"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_phone"
                    android:maxLength="11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:hint="请输入新手机号"
                    android:textColorHint="@color/ysf_grey_999999" />
                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_23"
                    android:background="@drawable/shape_circle_conner_blue_light3"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_13"
                    android:gravity="center"
                    android:id="@+id/tv_get_code"
                    android:textColor="@color/primary_blue"
                    android:text="获取验证码"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_05"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/ysf_grey_e9e9e9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="验证码"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@null"
                android:id="@+id/et_code_num"
                android:hint="请输入验证码"
                android:textColorHint="@color/ysf_grey_999999" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_05"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/ysf_grey_e9e9e9" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_46"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/shape_circle_conner_blue_deep"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />



        </LinearLayout>
    </FrameLayout>
</LinearLayout>